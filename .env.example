# ==============================================================================
# CRYPTO DCA BOT - ENVIRONMENT CONFIGURATION
# ==============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# This bot is configured for SAFE, CONSERVATIVE, LONG-TERM investing

# ==============================================================================
# SAFETY SETTINGS
# ==============================================================================
# Set to 'false' ONLY when you're ready for live trading (requires code change)
DRY_RUN=true

# ==============================================================================
# EXCHANGE API CREDENTIALS (TESTNET/SANDBOX RECOMMENDED)
# ==============================================================================
# Use testnet/sandbox APIs for safe testing
# NEVER grant withdrawal permissions
# Store these securely and NEVER commit to git

# Coinbase (Advanced Trade)
COINBASE_API_KEY=your_api_key_here
COINBASE_API_SECRET=your_api_secret_here

# ==============================================================================
# DCA STRATEGY CONFIGURATION
# ==============================================================================
# Total weekly investment amount in USD
DCA_WEEKLY_AMOUNT=100

# Asset allocation (must sum to 100)
DCA_BTC_PERCENTAGE=50
DCA_ETH_PERCENTAGE=50

# Execution schedule (cron format: minute hour day-of-month month day-of-week)
# Default: Every Monday at 9:00 AM
# Examples:
#   0 9 * * 1 = Every Monday at 9:00 AM
#   0 0 * * 0 = Every Sunday at midnight
#   0 12 * * 3 = Every Wednesday at noon
DCA_SCHEDULE=0 9 * * 1

# ==============================================================================
# RISK CONTROL SETTINGS
# ==============================================================================
# Stop-loss: Halt new purchases if price drops this % from last buy
RISK_STOP_LOSS_PERCENT=20

# Take-profit: Pause new purchases if price rises this % from average entry
RISK_TAKE_PROFIT_PERCENT=30

# Maximum weekly exposure (safety cap)
RISK_MAX_WEEKLY_USD=100

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
LOG_LEVEL=info
LOG_FILE=logs/trades.log
LOG_CONSOLE=true

# ==============================================================================
# EXCHANGE SETTINGS
# ==============================================================================
# Which exchange to use
EXCHANGE=coinbase

# Order type (market recommended for DCA)
ORDER_TYPE=market

# ==============================================================================
# ADVANCED SETTINGS (DO NOT CHANGE UNLESS YOU KNOW WHAT YOU'RE DOING)
# ==============================================================================
# Trading mode (spot only - no leverage)
TRADING_MODE=spot

# Database path
DATABASE_PATH=bot.db
