# ETH-only paper trading config (no secrets)

# Pair and Open Trades
PAIR_WHITELIST=ETH/USD
MAX_OPEN_TRADES=1

# Stake / Capital
TOTAL_CAPITAL_USD=100
STAKE_AMOUNT_USD=25
MIN_ORDER_USD=20

# Buy Strategy (Entry)
ENTRY_STRATEGY=ema_crossover
EMA_SHORT=12
EMA_LONG=26
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30

# Sell Strategy (Exit)
STOP_LOSS_PERCENT=12
TAKE_PROFIT_PERCENT=20
TRAILING_STOP_PERCENT=5

# Scheduling
SCHEDULE_CRON=*/15 * * * *

# Logging
LOG_LEVEL=info
LOG_FILE=logs/eth_trades.log
LOG_CONSOLE=true
WEEKLY_SUMMARY=true

# Exchange Settings
EXCHANGE=coinbase
ORDER_TYPE=market
TRADING_MODE=spot

# Safety / Paper Trading
PAPER_TRADING=true
DRY_RUN_VERBOSE=true
MIN_USD_BALANCE=100

# Optional Safe Live Trading (two-switch)
# Live orders are only allowed when:
#   PAPER_TRADING=false AND ENABLE_LIVE_TRADING=true
ENABLE_LIVE_TRADING=false

# Coinbase Advanced Trade credentials (ONLY needed for live trading)
# CCXT `coinbase` uses API key + secret. Password/passphrase is typically NOT used.
# COINBASE_API_KEY=
# COINBASE_API_SECRET=
# COINBASE_API_PASSWORD=

# Fees
# Use percent here (example: 0.5 = 0.5%). The bot also accepts a fraction (0.005).
FEE_RATE=0.5

# Where paper state is stored
STATE_FILE=var/eth_paper_state.json
